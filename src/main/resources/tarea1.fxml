<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.tarea1Controller">
    <children>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Operando 1"/>
            <TextField fx:id="txtOperando1"/>

            <Label text="Operando 2"/>
            <TextField fx:id="txtOperando2"/>

            <Button text="Sumar" onAction="#sumar"/>

            <Label text="Resultado"/>
            <TextField fx:id="txtResultado" editable="false"/>
        </VBox>
    </children>
</AnchorPane>
